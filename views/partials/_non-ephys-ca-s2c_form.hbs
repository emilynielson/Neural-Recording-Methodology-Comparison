
<h3>Please selective matched datasets to compare <i class="arrow circle down icon"></i></h3>
<div class="ui gray divider"></div>
<form class="ui grid form" id='nonS2cFormList' method='post'>
  <div class="four wide column">
    <h3>Ephys</h3>
    <div class="ui gray divider"></div>
    <div class="ui fluid left large secondary vertical pointing menu">
      {{#each nonS2cFormList}}
        <a class="{{#ifCond @key 0}}active{{/ifCond}} item" data-tab="data-{{@key}}")>
          {{name}}
        </a>
      {{/each}}
    </div>
  </div>
  <div class="eight wide column">
    <h3>Matched imaging</h3>
    <div class="ui gray divider"></div>
    {{#each nonS2cFormList}}
      <div class="ui {{#ifCond @key 0}}active{{/ifCond}} tab text" data-tab="data-{{@key}}">
          {{#each matched}}
          <div class="inline field">
            <div class="ui checkbox">
              <input type="checkbox" name="{{../name}}_{{name}}" class="hidden">
              <label>{{name}}</label>
            </div>
          </div>
          {{/each}}
      </div>
    {{/each}}
  </div>
  <div class="four wide column">
    <h3>Spike to imaging models</h3>
    <div class="ui gray divider"></div>
      <div class="inline field">
        <div class="ui checkbox">
          <input type="checkbox" class="hidden">
          <label>Sigmoid model (Wei et al. 2017)</label>
        </div>
      </div>
  </div>
  <div class="sixteen wide column">
    <div class="ui gray divider"></div>
    <button class="ui right floated blue button" type="submit">Add Comparison</button>
  </div>
</form>
<br>
<br>
<table class="ui celled striped five column table">
    <thead>
        <tr>
            <th colspan="5">
                Benchmark table
            </th>
      </tr>
      <tr>
          <th>Dataset Name</th>
          <th>Fraction selective neuron</th>
          <th>Peakness</th>
          <th>PC content</th>
          <th>Decodability</th>
    </tr>
  </thead>
  <tbody>
    {{> _non_ephys_ca_s2c_form_results}}
  </tbody>
</table>




<script type="text/javascript">
  $(function(){
    $('#nonS2cFormList .menu .item').tab({context:$("#nonS2cFormList")});
    $('#nonS2cFormList').on('submit', function(){
      $.ajax({
        type: 'POST',
        data: {data: JSON.stringify($('#nonS2cFormList').serializeArray())},
        url: '/analyses',
        success: function(data) {
          console.log('yeah');
          location.reload();
        }
      });
    });
  });
</script>
