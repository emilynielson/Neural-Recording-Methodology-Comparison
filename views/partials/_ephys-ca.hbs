<div class="ui container">
  <div class="ui text">
    <p>We describe each model in detail and continue to incorporate new models in <a href="model">Models</a> page.</p>
    <h1>Model fits</h1>
    <form class="ui grid form" id='simFormList' method='post'>
      <div class="eight wide column">
        <h3>Datasets</h3>
        <div class="ui gray divider"></div>
        <div class="ui fluid left large secondary vertical pointing menu">
          {{#each simFormList}}
            <a class="{{#ifCond @key 0}}active{{/ifCond}} item" data-tab="data-{{@key}}")>
              {{name}}
            </a>
          {{/each}}
        </div>
      </div>
      <div class="eight wide column">
        <h3>Recordings</h3>
        <div class="ui gray divider"></div>
        {{#each simFormList}}
          <div class="ui {{#ifCond @key 0}}active{{/ifCond}} tab text" data-tab="data-{{@key}}">
              {{#each matched}}
              <div class="inline field">
                <div class="ui checkbox">
                  <input type="checkbox" name="data/{{../name}}/{{name}}" class="hidden">
                  <label>{{name}}</label>
                </div>
              </div>
              {{/each}}
          </div>
        {{/each}}
      </div>
    </form>
    <div class="ui gray divider"></div>
    <button class="ui right floated blue button" id='compare_btn'>Compare</button>
    <br>
    <br>



    <div class="ui basic segment" id='simChart'>
      <br><br><br><br><br><br><br><br><br>
    </div>
    <h1>Performances</h1>
    <div class="ui divider"></div>
    <br><br>

  </div>
</div>
