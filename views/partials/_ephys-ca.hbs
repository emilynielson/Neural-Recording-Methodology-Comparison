<div class="ui container">
  <div class="ui text">
    <p>descripe what is simultaneous recoridng data</p>
    <p>We currently collected xx datasests (<a href="data">Datasets</a>) and xx number of sim ephys-imaging cells in total.</p>
    <p>We describe each model in detail and continue to incorporate new models in <a href="model">Models</a> page.</p>
    <h1>Model fits</h1>
    <div class="ui form">
      <div class="two fields">
        <div class="field">
          <label>Datasets</label>
          <div class="ui fluid search selection dropdown" id='simDatasetID'>
            <div class="default text"> Select a dataset</div>
            <div class="menu">
              {{#each simFormList}}
              <div class="item" data-value={{alias}}>{{name}}</div>
              {{/each}}
            </div>
          </div>
        </div>
        <div class="field">
          <label>Recording</label>
          <div class="ui fluid search selection dropdown" id='simCell'>
            <div class="default text"> Select a cell in a session</div>
            <div class="menu" id='simDataID'>
            </div>
          </div>
        </div>
      </div>
    </div>
    <button class="ui right floated blue button" id='plot_btn'>Plot</button>
    <br>
    <br>
    <div id='simChart'></div><br><br>
    <h1>Performances</h1>
    <div class="ui divider"></div>
    <br><br>

  </div>
</div>


<script type="text/javascript">

  var data = [
  {
    x: [0, 1, 2, 3, 4, 5, 6, 7, 8],
    y: [0, 1, 2, 3, 4, 5, 6, 7, 8],
    type: 'scatter'
  }
  ];

  var layout = {
    autosize: false,
    width: 1000,
    height: 250,
    margin: {
      l: 50,
      r: 50,
      b: 100,
      t: 100,
      pad: 4
    }
  };

  Plotly.plot('simChart', data, layout);

  $(function(){
    $('#simDatasetID').dropdown({
      onChange: function(value){
        var html = '';
        $.getJSON('/results/sim_'+ value +'.json', function(resultsJson){
          $.each(resultsJson, function(ind, val){
            html += '<div class="item" data-value="' + val.name + '">' + val.name + '</div>';
          });
          $('#simDataID').html(html);
          $('#simCell').dropdown('clear');
        });
      }
    });
    $('#plot_btn').on('click', function(event){
      event.preventDefault();
      var dataset = $('#simDatasetID').dropdown('get value');
      var cell = $('#simCell').dropdown('get value');
      var url = '/results/simData/' + dataset + '/' + cell + '.json';
    });
  });
</script>
