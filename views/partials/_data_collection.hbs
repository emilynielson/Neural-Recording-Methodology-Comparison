<div class="ui grid" id='data_collection_tab'>
  <div class="four wide column">
    <div class="ui fluid left large secondary vertical pointing menu">
      {{#each collection}}
        <a class="{{#ifCond @key 0}}active{{/ifCond}} item" data-tab="data-{{@key}}" )>
          {{name}}
          <div class="ui yellow label">
            {{datasets.length}}
          </div>
        </a>
      {{/each}}
    </div>
  </div>
  <div class="twelve wide column">
    {{#each collection}}
      <div class="ui {{#ifCond @key 0}}active{{/ifCond}} tab text" data-tab="data-{{@key}}">
        <h2>{{name}} <span class="ui red label flotated right">{{label}}</span></h2>
        <div class="ui accordion">
          <div class="title"><h3>
              {{description}} (Read more <i class="dropdown icon"></i>)</h3>
          </div>
          <div class="content">
            <p>{{description_detail}}</p>
            <img src="{{description_images}}" height="150" class="ui centered image">
          </div>
        </div>
        <h3>Related datasets <span class="ui large teal circular label">{{datasets.length}}</span></h3>
        <ul class="ui list">
          {{#each datasets}}
            <li>
              <h3>{{Name}}</h3></li>
            <span class="ui blue label">{{Label}}</span>
            {{#each OtherLabel}}
              <span class="ui gray label">{{this}}</span>
            {{/each}}
            <br> {{Description}}
            <br> References:
            <ul class="ui list">
              {{#each Reference}}
                <li>{{this}}</li>description_images
              {{/each}}
            </ul>
            Link: {{Link}}
            <br>
            <br>
          {{/each}}
        </ul>
        <br><br><br><br>
      </div>
    {{/each}}
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#data_collection_tab .menu .item').tab({
      context: $("#data_collection_tab")
    });
  });
</script>
